<h1><%= @article.title %></h1>
<% unless @article.user.nil? %>
<div>
	<p style="color:red"> Escrito por: <%= @article.user.email %></p>
</div>
<div>
	<p style="color:red"> Visitas <%= @article.visits_count %></p>
</div>
<%end%>
<div>
	<%= @article.body %>
</div>
<div>
	<%= link_to "Editar", edit_article_path(@article) %>
</div>